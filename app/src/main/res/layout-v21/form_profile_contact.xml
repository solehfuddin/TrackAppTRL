<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Contact Person"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        app:customFont="TitilliumSemiBold.ttf" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/form_profile_contact_txtCp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPersonName"
        android:hint="Contact Person"
        android:textColorHint="@color/bootstrap_gray_light"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"/>

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:id="@+id/form_profile_contact_lblCp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:text="* Contact Person must filled"
        android:textColor="@color/bootstrap_brand_danger"
        android:textSize="14sp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:customFont="TitilliumSemiBold.ttf" />

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Phone Number"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        app:customFont="TitilliumSemiBold.ttf" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/form_profile_contact_txtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Phone or mobile number"
        android:inputType="textPhonetic"
        android:textColorHint="@color/bootstrap_gray_light"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"/>

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:id="@+id/form_profile_contact_lblPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:text="* Phone or mobile number must filled"
        android:textColor="@color/bootstrap_brand_danger"
        android:textSize="14sp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:customFont="TitilliumSemiBold.ttf" />

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="Email Address"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        app:customFont="TitilliumSemiBold.ttf" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/form_profile_contact_txtMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/bootstrap_gray_light"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"/>

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:id="@+id/form_profile_contact_lblMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:text="* Email address must filled"
        android:textColor="@color/bootstrap_brand_danger"
        android:textSize="14sp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:customFont="TitilliumSemiBold.ttf" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/form_profile_contact_btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            app:bootstrapSize="md"
            app:bootstrapText="Update"
            app:bootstrapBrand="success"
            />
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/form_profile_contact_btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp"
            app:bootstrapSize="md"
            app:bootstrapText="Cancel"
            app:bootstrapBrand="danger"/>
    </RelativeLayout>

</LinearLayout>