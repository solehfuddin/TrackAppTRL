<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/listview_power_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_check_circle"/>

        <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
            android:id="@+id/listview_power_txtpower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="LENS DESCRIPTION"
            android:textSize="18sp"
            android:textColor="@color/colorEnd"
            android:textAlignment="center"
            app:customFont="UbuntuMedium.ttf"/>
    </LinearLayout>

</RelativeLayout>