<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_searchnow_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
            android:id="@+id/item_searchnow_txtkeyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Recent Search"
            android:textColor="@color/colorContent"
            android:layout_alignParentLeft="true"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"
            app:customFont="RobotoRegular.ttf" />

        <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
            android:id="@+id/item_searchnow_txtid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Recent Search"
            android:textColor="@color/colorContent"
            android:layout_alignParentLeft="true"
            android:maxLines="2"
            android:visibility="gone"
            android:ellipsize="end"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"
            app:customFont="RobotoRegular.ttf" />

        <ImageView
            android:id="@+id/item_searchnow_btnselect"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_add_selection"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>

</LinearLayout>