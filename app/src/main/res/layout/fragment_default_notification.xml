<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.DefaultNotificationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_defaultnotif_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fragment_defaultnotif_linearNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:id="@+id/fragment_defaultnotif_txtNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/terbaru"
                android:textColor="#333b3e"
                android:textSize="16sp"
                android:textStyle="bold"
                app:customFont="RobotoMedium.ttf" />

            <ProgressBar
                android:id="@+id/fragment_defaultnotif_progressNew"
                style="?android:attr/progressBarStyle"
                android:layout_gravity="center_horizontal"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_defaultnotif_recyclerNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                tools:targetApi="lollipop" />

            <ImageView
                android:id="@+id/fragment_defaultnotif_imgErrorNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:src="@drawable/notfound"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_defaultnotif_linearOld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_defaultnotif_linearNew">

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:id="@+id/fragment_defaultnotif_txtOld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/sebelumnya"
                android:textColor="#333b3e"
                android:textSize="16sp"
                android:textStyle="bold"
                app:customFont="RobotoMedium.ttf" />

            <ProgressBar
                android:id="@+id/fragment_defaultnotif_progressOld"
                style="?android:attr/progressBarStyle"
                android:layout_gravity="center_horizontal"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_defaultnotif_recyclerOld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="10dp"
                tools:targetApi="lollipop" />

            <ImageView
                android:id="@+id/fragment_defaultnotif_imgErrorOld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:src="@drawable/notfound"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/fragment_defaultnotif_progressType"
            style="?android:attr/progressBarStyle"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_defaultnotif_recyclerType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fragment_defaultnotif_imgErrorType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/notfound"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>