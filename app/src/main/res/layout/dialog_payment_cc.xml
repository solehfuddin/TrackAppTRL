<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/dialog_paymentcc_slmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_height="600"
        app:scale_base_width="400">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="145dp"
            android:scaleType="centerCrop"
            app:scale_width="400"
            app:scale_height="150"
            app:srcCompat="@drawable/bg_payment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment with CC"
            android:textColor="@android:color/white"
            app:scale_left="10"
            app:scale_textsize="25"
            app:scale_top="20"
            app:scale_width="400"
            tools:ignore="MissingPrefix" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Billing"
            android:textColor="@android:color/white"
            app:scale_left="10"
            app:scale_textsize="20"
            app:scale_top="90"
            app:scale_width="400"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/dialog_paymentcc_tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 10.000"
            android:textColor="@android:color/white"
            app:scale_left="10"
            app:scale_textsize="18"
            app:scale_top="120"
            app:scale_width="400"
            tools:ignore="MissingPrefix" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name on card"
            app:scale_left="10"
            app:scale_textsize="17"
            app:scale_top="160"
            app:scale_width="400"
            tools:ignore="MissingPrefix" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/dialog_paymentcc_edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UDIN KHAERUDIN"
            android:inputType="textPersonName"
            app:scale_height="40"
            app:scale_left="9"
            app:scale_textsize="15"
            app:scale_top="185"
            app:scale_width="380"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Number"
            app:scale_left="10"
            app:scale_textsize="17"
            app:scale_top="235"
            app:scale_width="400"
            tools:ignore="MissingPrefix" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/dialog_paymentcc_edtCCNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="4811111111111114"
            android:inputType="number"
            android:maxLength="16"
            app:scale_height="40"
            app:scale_left="10"
            app:scale_textsize="15"
            app:scale_top="260"
            app:scale_width="380"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exp date"
            app:scale_left="10"
            app:scale_textsize="17"
            app:scale_top="310"
            app:scale_width="190"
            tools:ignore="MissingPrefix" />

        <Spinner
            android:id="@+id/dialog_paymentcc_spinMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Expiry date"
            app:scale_height="30"
            app:scale_left="10"
            app:scale_top="335"
            app:scale_width="140" />

        <Spinner
            android:id="@+id/dialog_paymentcc_spinYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Exp date"
            app:scale_height="30"
            app:scale_left="155"
            app:scale_top="335"
            app:scale_width="110" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/visa"
            app:scale_top="335"
            app:scale_height="30"
            app:scale_left="270"
            app:scale_width="50"
            tools:ignore="MissingPrefix" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/master"
            app:scale_top="335"
            app:scale_height="30"
            app:scale_left="335"
            app:scale_width="50"
            tools:ignore="MissingPrefix" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CVV code"
            app:scale_left="10"
            app:scale_textsize="17"
            app:scale_top="375"
            app:scale_width="100"
            tools:ignore="MissingPrefix" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CVV number is the last 3 digit number printed on the reverse of the card."
            android:textStyle="italic"
            app:scale_left="120"
            app:scale_textsize="15"
            app:scale_top="400"
            app:scale_width="280"
            tools:ignore="MissingPrefix" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/dialog_paymentcc_edtCvv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="3"
            app:scale_height="40"
            app:scale_left="10"
            app:scale_textsize="15"
            app:scale_top="400"
            app:scale_width="100" />

        <Button
            android:id="@+id/dialog_paymentcc_btnPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorFirst"
            android:textColor="@android:color/white"
            android:text="Pay"
            app:scale_height="50"
            app:scale_left="9"
            app:scale_textsize="20"
            app:scale_top="455"
            app:scale_width="382"
            tools:ignore="MissingPrefix" />

        <!--<TextView-->
            <!--android:id="@+id/token_output"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:hint="Output token will be shown here"-->
            <!--app:scale_height="100"-->
            <!--app:scale_left="10"-->
            <!--app:scale_textsize="20"-->
            <!--app:scale_top="510"-->
            <!--app:scale_width="380"-->
            <!--tools:ignore="MissingPrefix" />-->
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/dialog_paymentcc_llresult"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/dialog_paymentcc_tvResult"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:id="@+id/dialog_paymentcc_btnBack"/>
    </LinearLayout>

</LinearLayout>