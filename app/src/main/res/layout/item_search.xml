<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_search_cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="19dp"
    android:layout_marginLeft="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner">

        <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
            android:id="@+id/item_search_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="ID"
            android:visibility="gone"
            android:textColor="@color/colorSecondary"
            app:customFont="RobotoRegular.ttf" />

        <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
            android:id="@+id/item_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Borelli XXX"
            android:textColor="@color/colorSecondary"
            app:customFont="RobotoRegular.ttf" />

    <com.andexert.library.RippleView
        android:id="@+id/item_search_btndelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/item_search_title"
        android:layout_centerVertical="true"
        app:rv_rippleDuration="300"
        app:rv_type="simpleRipple">

        <ImageView
            android:id="@+id/item_search_delete"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_cancel" />
    </com.andexert.library.RippleView>

    </RelativeLayout>
</android.support.v7.widget.CardView>