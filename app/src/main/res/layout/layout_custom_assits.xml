<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bggray">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:weightSum="4"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:id="@+id/layout_assits_lensorder"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <com.andexert.library.RippleView
                        android:id="@+id/layout_custom_rplensorder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:rv_rippleDuration="150"
                        app:rv_type="rectangle">

                        <ImageView
                            android:id="@+id/layout_assits_iclensorder"
                            android:layout_width="55dp"
                            android:layout_height="54dp"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/app_name"
                            app:srcCompat="@drawable/lensorder_round" />
                    </com.andexert.library.RippleView>

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:id="@+id/layout_assits_txtlensorder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lens_order"
                        android:textAlignment="center"
                        android:textColor="@color/colorContent"
                        android:textSize="12sp"
                        app:customFont="RobotoMedium.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_assits_historylens"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <com.andexert.library.RippleView
                        android:id="@+id/layout_custom_rphistorylens"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:rv_rippleDuration="150"
                        app:rv_type="rectangle">

                        <ImageView
                            android:id="@+id/layout_assits_ichistorylens"
                            android:layout_width="55dp"
                            android:layout_height="54dp"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/app_name"
                            app:srcCompat="@drawable/historylens_round" />
                    </com.andexert.library.RippleView>

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:id="@+id/layout_assits_txthistorylen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/history_lens"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorContent"
                        app:customFont="RobotoMedium.ttf"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_assits_ordertrack"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <com.andexert.library.RippleView
                        android:id="@+id/layout_custom_rpordertrack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:rv_rippleDuration="150"
                        app:rv_type="rectangle">

                        <ImageView
                            android:id="@+id/layout_assits_icordertrack"
                            android:layout_width="55dp"
                            android:layout_height="54dp"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/app_name"
                            app:srcCompat="@drawable/ordertrack_round" />
                    </com.andexert.library.RippleView>

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:id="@+id/layout_assits_txtordertrack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/order_track"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorContent"
                        app:customFont="RobotoMedium.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_assits_deliverytracking"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <com.andexert.library.RippleView
                        android:id="@+id/layout_custom_rpdeliverytracking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:rv_rippleDuration="150"
                        app:rv_type="rectangle">

                        <ImageView
                            android:id="@+id/layout_assits_icdeliverytracking"
                            android:layout_width="55dp"
                            android:layout_height="54dp"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/app_name"
                            app:srcCompat="@drawable/deliverytrack_round" />
                    </com.andexert.library.RippleView>

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:id="@+id/layout_assits_txtdeliverytracking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ship_track"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorContent"
                        app:customFont="RobotoMedium.ttf" />
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>