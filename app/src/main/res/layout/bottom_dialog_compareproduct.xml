<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_compareproduct_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.andexert.library.RippleView
        android:id="@+id/dialog_compareproduct_ripplebtnsave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rv_rippleDuration="150"
        app:rv_type="simpleRipple"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_compareproduct_recyclerview">

        <Button
            android:id="@+id/dialog_compareproduct_btnselect"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorFirst"
            android:textColor="@color/neutral"
            android:text="@string/bandingkan_lensa"
            android:textSize="14sp" />
    </com.andexert.library.RippleView>

</androidx.constraintlayout.widget.ConstraintLayout>