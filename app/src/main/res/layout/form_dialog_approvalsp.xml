<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:id="@+id/form_dialogapprovalsp_txtspnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="# SP Number"
                android:background="@color/colorFirst"
                android:textColor="#fff"
                android:textSize="16sp"
                android:padding="5dp"
                android:textAlignment="center"
                app:customFont="UbuntuMedium.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="10">

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/form_dialogapprovalsp_lbltipe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.2"
                    android:text="Sp Type"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack"
                    app:customFont="TitilliumSemiBold.ttf"/>

                <ayar.oktay.advancedtextview.AdvancedTextView
                    android:id="@+id/form_dialogapprovalsp_txttipe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.8"
                    android:text="Tipe Spnya"
                    android:textColor="@color/colorContent"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:lines="2"
                    app:justifyText="true"
                    app:customFont="TitilliumSemiBold.ttf"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.2"
                        android:background="@drawable/custom_border"
                        android:padding="5dp"
                        android:text="SIDE"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp"
                        app:customFont="TitilliumSemiBold.ttf" />

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_border"
                        android:layout_weight="2.6"
                        android:padding="5dp"
                        android:text="SPH"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp"
                        app:customFont="TitilliumSemiBold.ttf" />

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.6"
                        android:background="@drawable/custom_border"
                        android:padding="5dp"
                        android:text="CYL"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp"
                        app:customFont="TitilliumSemiBold.ttf" />

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.6"
                        android:background="@drawable/custom_border"
                        android:padding="5dp"
                        android:text="ADD"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp"
                        app:customFont="TitilliumSemiBold.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.2"
                        android:text="RIGHT"
                        android:padding="5dp"
                        android:textSize="13sp"
                        android:background="@drawable/custom_border"
                        android:textColor="@color/colorBlack"
                        app:customFont="TitilliumSemiBold.ttf"/>

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:id="@+id/form_dialogtrack_txtsphr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.6"
                        android:background="@drawable/custom_border"
                        android:padding="5dp"
                        android:text="0.00"
                        android:textAlignment="center"
                        android:textColor="@color/colorContent"
                        android:textSize="13sp"
                        app:customFont="TitilliumSemiBold.ttf" />

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:id="@+id/form_dialogtrack_txtcylr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.6"
                        android:background="@drawable/custom_border"
                        android:padding="5dp"
                        android:text="0.00"
                        android:textAlignment="center"
                        android:textColor="@color/colorContent"
                        android:textSize="13sp"
                        app:customFont="TitilliumSemiBold.ttf" />

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:id="@+id/form_dialogtrack_txtaddr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.6"
                        android:background="@drawable/custom_border"
                        android:padding="5dp"
                        android:text="0.00"
                        android:textAlignment="center"
                        android:textColor="@color/colorContent"
                        android:textSize="13sp"
                        app:customFont="TitilliumSemiBold.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.2"
                        android:text="LEFT"
                        android:padding="5dp"
                        android:textSize="13sp"
                        android:background="@drawable/custom_border"
                        android:textColor="@color/colorBlack"
                        app:customFont="TitilliumSemiBold.ttf"/>

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:id="@+id/form_dialogtrack_txtsphl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.6"
                        android:background="@drawable/custom_border"
                        android:padding="5dp"
                        android:text="0.00"
                        android:textAlignment="center"
                        android:textColor="@color/colorContent"
                        android:textSize="13sp"
                        app:customFont="TitilliumSemiBold.ttf" />

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:id="@+id/form_dialogtrack_txtcyll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.6"
                        android:background="@drawable/custom_border"
                        android:padding="5dp"
                        android:text="0.00"
                        android:textAlignment="center"
                        android:textColor="@color/colorContent"
                        android:textSize="13sp"
                        app:customFont="TitilliumSemiBold.ttf" />

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:id="@+id/form_dialogtrack_txtaddl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.6"
                        android:background="@drawable/custom_border"
                        android:padding="5dp"
                        android:text="0.00"
                        android:textAlignment="center"
                        android:textColor="@color/colorContent"
                        android:textSize="13sp"
                        app:customFont="TitilliumSemiBold.ttf" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="-5dp"
                android:weightSum="10"
                android:orientation="horizontal">

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/form_dialogapprovalsp_lblnama"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.2"
                    android:text="Optic Name "
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    app:customFont="TitilliumSemiBold.ttf" />

                <ayar.oktay.advancedtextview.AdvancedTextView
                    android:id="@+id/form_dialogapprovalsp_txtnama"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.8"
                    android:text="nama optiknya"
                    android:textColor="@color/colorContent"
                    android:textSize="14sp"
                    app:customFont="TitilliumSemiBold.ttf"
                    app:justifyText="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:weightSum="10">

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/form_dialogapprovalsp_lblkondisi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.2"
                    android:text="Condition"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    app:customFont="TitilliumSemiBold.ttf" />

                <ayar.oktay.advancedtextview.AdvancedTextView
                    android:id="@+id/form_dialogapprovalsp_txtkondisi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.8"
                    android:text="kondisi"
                    android:textColor="@color/colorContent"
                    android:textSize="14sp"
                    app:customFont="TitilliumSemiBold.ttf"
                    app:justifyText="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:weightSum="10">

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/form_dialogapprovalsp_lblvia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.2"
                    android:text="Order Via"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    app:customFont="TitilliumSemiBold.ttf" />

                <ayar.oktay.advancedtextview.AdvancedTextView
                    android:id="@+id/form_dialogapprovalsp_txtvia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.8"
                    android:text="Order melalui"
                    android:textColor="@color/colorContent"
                    android:textSize="14sp"
                    app:customFont="TitilliumSemiBold.ttf"
                    app:justifyText="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:weightSum="10">

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/form_dialogtrack_lblfacettrl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.2"
                    android:text="Facet TRL"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    app:customFont="TitilliumSemiBold.ttf" />

                <com.beardedhen.androidbootstrap.BootstrapLabel
                    android:id="@+id/form_dialogtrack_btnfacet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.8"
                    android:text="Content Facet TRL"
                    app:bootstrapBrand="success"
                    app:bootstrapHeading="h6"
                    app:roundedCorners="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <com.andexert.library.RippleView
                    android:id="@+id/form_dialogapprovalsp_rippleBtnDownload"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    app:rv_type="rectangle"
                    app:rv_rippleDuration="250">

                    <Button
                        android:id="@+id/form_dialogapprovalsp_btnDownload"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/colorToolbar"
                        android:text="@string/detail_sp"
                        android:textColor="@color/neutral"
                        android:textSize="14sp" />
                </com.andexert.library.RippleView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <com.andexert.library.RippleView
                        android:id="@+id/form_dialogapprovalsp_rippleBtnApprove"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        app:rv_color="@color/colorHint"
                        app:rv_rippleDuration="600"
                        app:rv_type="rectangle">

                        <Button
                            android:id="@+id/form_dialogapprovalsp_btnApprove"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/border_custom"
                            android:text="@string/approve_sp"
                            android:textColor="@color/colorHint"
                            android:textSize="14sp" />
                    </com.andexert.library.RippleView>

                    <com.andexert.library.RippleView
                        android:id="@+id/form_dialogapprovalsp_rippleBtnReject"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        app:rv_color="@color/colorRed"
                        app:rv_rippleDuration="600"
                        app:rv_type="rectangle">

                        <Button
                            android:id="@+id/form_dialogapprovalsp_btnReject"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/border_red"
                            android:text="@string/reject_sp"
                            android:textColor="@color/colorRed"
                            android:textSize="14sp" />
                    </com.andexert.library.RippleView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.cardview.widget.CardView>