<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:id="@+id/form_dialogreasonsp_txtspnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reason_sp_rejection"
                android:background="@color/colorFirst"
                android:textColor="#fff"
                android:textSize="16sp"
                android:padding="5dp"
                android:textAlignment="center"
                app:customFont="UbuntuMedium.ttf" />


            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/form_dialogreasonsp_edtNote"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType="textMultiLine"
                android:textColor="@color/colorHint"
                app:bootstrapBrand="info"
                app:bootstrapSize="md"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bottom_dialog_dpodkchangemulti_txttitlenote" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:weightSum="10">

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/form_dialogtrack_lblfacettrl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.2"
                    android:text="Facet TRL"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    app:customFont="TitilliumSemiBold.ttf" />

                <com.beardedhen.androidbootstrap.BootstrapLabel
                    android:id="@+id/form_dialogtrack_btnfacet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.8"
                    android:text="Content Facet TRL"
                    app:bootstrapBrand="success"
                    app:bootstrapHeading="h6"
                    app:roundedCorners="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <com.andexert.library.RippleView
                        android:id="@+id/form_dialogreasonsp_rippleBtnApprove"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        app:rv_color="@color/colorHint"
                        app:rv_rippleDuration="600"
                        app:rv_type="rectangle">

                        <Button
                            android:id="@+id/form_dialogreasonsp_btnApprove"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/border_custom"
                            android:text="@string/save"
                            android:textColor="@color/colorHint"
                            android:textSize="14sp" />
                    </com.andexert.library.RippleView>

                    <com.andexert.library.RippleView
                        android:id="@+id/form_dialogreasonsp_rippleBtnReject"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        app:rv_color="@color/colorRed"
                        app:rv_rippleDuration="600"
                        app:rv_type="rectangle">

                        <Button
                            android:id="@+id/form_dialogreasonsp_btnReject"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/border_red"
                            android:text="@string/quit"
                            android:textColor="@color/colorRed"
                            android:textSize="14sp" />
                    </com.andexert.library.RippleView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.cardview.widget.CardView>