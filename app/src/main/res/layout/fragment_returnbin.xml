<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ReturnbinFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_returbin_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/fragment_returbin_linearseacrh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <com.andexert.library.RippleView
                android:id="@+id/fragment_returbin_rpsearch"
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                app:rv_rippleDuration="100"
                app:rv_type="rectangle">

                <ImageButton
                    android:id="@+id/fragment_returbin_btnsearch"
                    android:layout_width="40dp"
                    android:layout_height="38dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorToolbar"
                    android:src="@drawable/ic_search" />
            </com.andexert.library.RippleView>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/fragment_returbin_txtJobNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="55dp"
                android:layout_marginBottom="5dp"
                android:background="@color/neutral"
                android:hint="Search ttb number"
                android:inputType="textPersonName"
                app:met_hideUnderline="true" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/fragment_returbin_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_returbin_cards"
        app:layout_constraintTop_toBottomOf="@+id/fragment_returbin_cards">

        <LinearLayout
            android:id="@+id/fragment_returbin_lin_tool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp">

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/fragment_returbin_txtflag"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="14sp"
                    android:focusable="true"
                    android:text="Menunggu"
                    android:gravity="center|end"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorContent"
                    android:layout_toStartOf="@+id/fragment_returbin_swflag"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="5dp"
                    app:customFont="UbuntuMedium.ttf"
                    tools:ignore="HardcodedText" />

                <Switch
                    android:id="@+id/fragment_returbin_swflag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="end"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:checked="false"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/fragment_returbin_rl_tool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/fragment_returbin_btnprev"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.3"
                    android:textSize="20sp"
                    app:bootstrapBrand="success"
                    app:bootstrapSize="md"
                    app:bootstrapText="&lt;" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/fragment_returbin_btnnext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:textSize="20sp"
                    app:bootstrapBrand="success"
                    app:bootstrapSize="md"
                    app:bootstrapText="&gt;" />

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/fragment_returbin_txtCounter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight="7.4"
                    android:gravity="right"
                    android:text="Data count"
                    android:textColor="#333b3e"
                    android:textSize="15sp"
                    app:customFont="RobotoMedium.ttf" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_returbin_recycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/fragment_returbin_lin_tool"
            android:layout_marginTop="2dp" />

        <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
            android:id="@+id/fragment_returbin_progressBar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            app:mlpb_arrow_height="5dp"
            app:mlpb_arrow_width="10dp"
            app:mlpb_enable_circle_background="true"
            app:mlpb_progress_color="@color/colorToolbar"
            app:mlpb_show_arrow="true" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_returbin_fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:fabSize="mini"
        app:rippleColor="@color/gray"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>