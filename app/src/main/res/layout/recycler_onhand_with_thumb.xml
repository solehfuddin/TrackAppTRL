<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:id="@+id/recycler_onhand_txtItemCollection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="6dp"
        android:visibility="gone"
        android:text="ItemCode"
        android:textColor="@color/colorContent"
        android:textSize="14sp"
        android:textStyle="bold"
        app:customFont="UbuntuRegular.ttf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:id="@+id/recycler_onhand_txtItemQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="6dp"
        android:visibility="gone"
        android:text="@string/_0_pcs"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:customFont="UbuntuRegular.ttf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_onhand_txtItemCollection">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recycler_onhand_linearselect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_black"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recycler_onhand_imgSelect"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/check"
                android:visibility="visible"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/recycler_onhand_lineartitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/recycler_onhand_cardChooser"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/recycler_onhand_txtItemCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingTop="6dp"
                    android:text="ItemCode"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:customFont="UbuntuRegular.ttf" />

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/recycler_onhand_txtItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Mcdonald IOL Implantation Forceps, Titanium , Overall Length 100 Mm, 3.9 Inches,  Angled Curved Jaws"
                    android:textSize="12sp"
                    app:customFont="MavenPro-Regular.ttf" />

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/recycler_onhand_txtItemId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Mcdonald IOL Implantation Forceps, Titanium , Overall Length 100 Mm, 3.9 Inches,  Angled Curved Jaws"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:customFont="MavenPro-Regular.ttf" />

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/recycler_onhand_txtItemImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Mcdonald IOL Implantation Forceps, Titanium , Overall Length 100 Mm, 3.9 Inches,  Angled Curved Jaws"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:customFont="MavenPro-Regular.ttf" />

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/recycler_onhand_txtItemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Mcdonald IOL Implantation Forceps, Titanium , Overall Length 100 Mm, 3.9 Inches,  Angled Curved Jaws"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:customFont="MavenPro-Regular.ttf" />

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/recycler_onhand_txtItemDisc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Mcdonald IOL Implantation Forceps, Titanium , Overall Length 100 Mm, 3.9 Inches,  Angled Curved Jaws"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:customFont="MavenPro-Regular.ttf" />

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/recycler_onhand_txtItemBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Mcdonald IOL Implantation Forceps, Titanium , Overall Length 100 Mm, 3.9 Inches,  Angled Curved Jaws"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:customFont="MavenPro-Regular.ttf" />

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/recycler_onhand_txtItemWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Mcdonald IOL Implantation Forceps, Titanium , Overall Length 100 Mm, 3.9 Inches,  Angled Curved Jaws"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:customFont="MavenPro-Regular.ttf" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/recycler_onhand_cardCounter"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="5dp">

                        <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                            android:id="@+id/recycler_onhand_txtCounter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorRed"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="3000"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            app:customFont="UbuntuRegular.ttf" />

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/recycler_onhand_cardChooser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/recycler_onhand_imgChooser"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/pic_holder"
                    android:visibility="gone" />

                <ozaydin.serkan.com.image_zoom_view.ImageViewZoom
                    android:id="@+id/recycler_onhand_imageZoom"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:visibility="gone"
                    android:src="@drawable/pic_holder" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/recycler_onhand_viewPager"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:visibility="gone"
                    android:background="@android:color/darker_gray"/>

                <FrameLayout
                    android:id="@+id/recycler_onhand_fragment"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:visibility="visible"/>

<!--                <ozaydin.serkan.com.image_zoom_view.ImageViewZoom-->
<!--                    android:id="@+id/recycler_onhand_imgChooser"-->
<!--                    android:layout_width="90dp"-->
<!--                    android:layout_height="90dp"-->
<!--                    android:src="@drawable/pic_holder"-->
<!--                    android:visibility="visible"/>-->
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>