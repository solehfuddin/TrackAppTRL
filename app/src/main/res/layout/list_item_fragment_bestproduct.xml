            <!--android:layout_centerInParent="true"-->
            <!--android:textColor="@color/white"-->
            <!--app:customFont="LatoBold.ttf" />-->

            <!--</RelativeLayout>-->

            <!--</android.support.v7.widget.CardView>-->

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:id="@+id/listitem_fragment_bestproduct_txtProductid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Id"
                android:visibility="gone"
                android:textSize="14sp"
                app:customFont="MavenPro-Regular.ttf" />

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:id="@+id/listitem_fragment_bestproduct_txtProductname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Product Name"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:maxLines="1"
                android:textStyle="bold"
                android:ellipsize="end"
                app:customFont="UbuntuMedium.ttf" />

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:id="@+id/listitem_fragment_bestproduct_txtProductcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Code"
                android:textSize="14sp"
                app:customFont="MavenPro-Regular.ttf" />

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:id="@+id/listitem_fragment_bestproduct_txtProductavailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Stok Tersedia"
                android:textColor="@color/colorToolbar"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"
                app:customFont="UbuntuMedium.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:weightSum="10">

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/listitem_fragment_bestproduct_txtRealprice"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:customFont="MavenPro-Regular.ttf"
                    android:text="Real Price"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>

                <!--<com.raizlabs.universalfontcomponents.widget.UniversalFontTextView-->
