<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="135dp"
                android:layout_marginLeft="35dp"
                android:src="@drawable/phone_number"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp">

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:text="Enter your phone number"
                android:textAlignment="center"
                android:textColor="@color/colorContent"
                android:textSize="15sp"
                app:customFont="UbuntuMedium.ttf" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/form_dashboard_updatephone_txphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:inputType="phone"
                app:roundedCorners="true"
                app:bootstrapSize="md"
                app:bootstrapBrand="info"/>

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:padding="8dp"
                android:text="Your phone number will be used for security purposes, such as helping you when forget password"
                android:textAlignment="center"
                android:textColor="@color/colorContent"
                android:textSize="14sp"
                app:customFont="UbuntuMedium.ttf" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/form_dashboard_updatephone_btnsave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_gravity="center_horizontal"
                app:bootstrapBrand="success"
                app:bootstrapSize="md"
                app:bootstrapText="Save"
                app:roundedCorners="false" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>