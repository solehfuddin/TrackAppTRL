<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="1dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/list_itemframesp_linearSelect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/list_itemframesp_imgProduct"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/bumperbanner" />

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/list_itemframesp_txtDiscPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:padding="2dp"
                    android:text="50% off"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:customFont="MavenPro-Regular.ttf"/>

                <ImageView
                    android:id="@+id/list_itemframesp_imgSelect"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/check"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"/>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="155dp"
                    android:layout_marginRight="1dp"
                    android:layout_alignParentLeft="true">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary">

                        <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                            android:id="@+id/list_itemframesp_txtBrand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="Borelli"
                            android:textSize="12sp"
                            android:layout_centerInParent="true"
                            android:textColor="@color/white"
                            app:customFont="LatoBold.ttf" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:id="@+id/list_itemframesp_txtProductId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Id"
                android:visibility="gone"
                android:textSize="14sp"
                app:customFont="MavenPro-Regular.ttf" />

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:id="@+id/list_itemframesp_txtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Product Name"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:maxLines="1"
                android:textStyle="bold"
                android:ellipsize="end"
                app:customFont="UbuntuMedium.ttf" />

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:id="@+id/list_itemframesp_txtProductCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Code"
                android:visibility="gone"
                android:textSize="14sp"
                app:customFont="MavenPro-Regular.ttf" />

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:id="@+id/list_itemframesp_txtProductAvail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Stok Tersedia"
                android:textColor="@color/colorToolbar"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"
                app:customFont="UbuntuMedium.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:weightSum="10">

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/list_itemframesp_txtProductPrice"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:customFont="MavenPro-Regular.ttf"
                    android:text="Real Price"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>