<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bggray">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:weightSum="4"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:id="@+id/layout_courier_task"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <com.andexert.library.RippleView
                        android:id="@+id/layout_custom_rptask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:rv_rippleDuration="150"
                        app:rv_type="rectangle">

                        <ImageView
                            android:id="@+id/layout_courier_ictask"
                            android:layout_width="55dp"
                            android:layout_height="54dp"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/app_name"
                            app:srcCompat="@drawable/pendingtask_round" />
                    </com.andexert.library.RippleView>

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:id="@+id/layout_courier_txttask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_process"
                        android:textAlignment="center"
                        android:textColor="@color/colorContent"
                        android:textSize="12sp"
                        app:customFont="RobotoMedium.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_courier_history"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@+id/layout_courier_task"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="UseCompoundDrawables">

                    <com.andexert.library.RippleView
                        android:id="@+id/layout_custom_rphistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:rv_rippleDuration="150"
                        app:rv_type="rectangle">

                        <ImageView
                            android:id="@+id/layout_courier_ichistory"
                            android:layout_width="55dp"
                            android:layout_height="54dp"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/app_name"
                            app:srcCompat="@drawable/historytask_round" />
                    </com.andexert.library.RippleView>

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:id="@+id/layout_courier_txthistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/delivery_history"
                        android:textAlignment="center"
                        android:textColor="@color/colorContent"
                        app:customFont="RobotoMedium.ttf" />
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>