<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="350dp"
    android:minHeight="225dp"
    android:background="@android:color/white">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary">

                <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                    android:id="@+id/filter_track_txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Filter Order Track By Date"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    app:customFont="DroidBold.ttf" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:focusableInTouchMode="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/ic_date"/>

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/filter_track_startdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/neutral"
                        android:hint="Start date"
                        android:inputType="textPersonName"
                        android:layout_margin="10dp"
                        app:met_hideUnderline="true"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bootstrap_dropdown_divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_date"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/filter_track_enddate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/neutral"
                    android:hint="End date"
                    android:inputType="textPersonName"
                    android:layout_margin="10dp"
                    app:met_hideUnderline="true"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bootstrap_dropdown_divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

                <com.andexert.library.RippleView
                    android:id="@+id/filter_track_ripple_btnok"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    app:rv_type="rectangle"
                    app:rv_rippleDuration="100">

                    <Button
                        android:id="@+id/filter_track_btnok"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorToolbar"
                        android:text="Filter"
                        android:textColor="@color/neutral"/>

                </com.andexert.library.RippleView>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>