<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_child_estatement_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

        <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="150034145"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorContent"
            android:id="@+id/item_child_estatement_txtinv"
            app:customFont="UbuntuMedium.ttf"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
            android:id="@+id/item_child_estatement_txttgl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:paddingLeft="8dp"
            android:text="SEP 2020"
            android:textColor="@color/dark_gray"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_child_estatement_txtinv"
            app:customFont="UbuntuMedium.ttf"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

        <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="IDR"
            android:textColor="@color/colorContent"
            android:textSize="11sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:customFont="UbuntuMedium.ttf"
            app:layout_constraintRight_toLeftOf="@+id/item_child_estatement_txtharga"
            android:layout_marginRight="6dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

        <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
            android:id="@+id/item_child_estatement_txtharga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:text="1.122.500"
            android:textColor="@color/colorTeks"
            android:textSize="18sp"
            app:customFont="UbuntuMedium.ttf"
            app:layout_constraintRight_toLeftOf="@+id/item_child_estatement_imgitem"
            android:layout_marginRight="2dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/item_child_estatement_imgitem"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/about_1_title"
            android:src="@drawable/ic_navigate_next_gray"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>