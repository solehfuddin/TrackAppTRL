<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:id="@+id/item_detailbalance_txtdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                app:customFont="UbuntuMedium.ttf" />

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:id="@+id/item_detailbalance_txtdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pembayaran bla bla"
                android:textColor="@color/colorContent"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                app:customFont="MavenPro-Regular.ttf" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginRight="10dp">

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:gravity="right"
                android:text="IDR"
                android:textColor="@color/colorContent"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/item_detailbalance_txtprice"
                app:customFont="UbuntuMedium.ttf" />

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:id="@+id/item_detailbalance_txtprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_margin="0dp"
                android:gravity="right"
                android:text="50.000"
                android:textColor="@color/colorRed"
                android:textSize="16sp"
                android:textStyle="bold"
                app:customFont="UbuntuMedium.ttf" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    
</LinearLayout>