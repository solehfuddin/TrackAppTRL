<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".17"
        android:layout_gravity="center_vertical"
        android:text="LENSA LEINZ RX :"
        android:textSize="16sp"
        android:textColor="@color/colorContent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/item_parent_estatement_txttitle"
        android:layout_marginStart="8dp" />

    <View
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:background="@color/dot_dark_screen2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_parent_estatement_txttitle"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:id="@+id/view2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_parent_estatement_recycler"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:weightSum="1"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_parent_estatement_recycler"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintVertical_bias="0.0">

        <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".65"
            android:layout_gravity="center_vertical"
            android:text="Subtotal : "
            android:gravity="right"
            android:textSize="12sp"
            android:textColor="@color/colorContent" />

        <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
            android:id="@+id/item_parent_estatement_txtsubtotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".35"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="Rp 15.000.000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorContent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>