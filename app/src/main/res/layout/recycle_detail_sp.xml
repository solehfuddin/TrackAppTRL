<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:id="@+id/recycler_detailsp_txtitemname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/item"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        app:customFont="UbuntuRegular.ttf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:id="@+id/recycler_detailsp_txtitemdesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:text="@string/item"
        android:textSize="11sp"
        android:textColor="@color/colorContent"
        app:customFont="UbuntuRegular.ttf"
        app:layout_constraintEnd_toStartOf="@+id/recycler_detailsp_txtitemqty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_detailsp_txtitemname" />

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:id="@+id/recycler_detailsp_titleitemqty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/jumlah"
        android:textColor="@color/colorContent"
        android:textSize="12sp"
        app:customFont="UbuntuRegular.ttf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:id="@+id/recycler_detailsp_txtitemqty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/qty"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        app:customFont="UbuntuRegular.ttf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_detailsp_titleitemqty" />

    <View
        android:id="@+id/view16"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/hori_dash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_detailsp_txtitemdesc" />

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:id="@+id/recycler_detailsp_titleitemharga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:text="@string/harga_qty"
        android:textColor="@color/colorContent"
        android:textSize="12sp"
        app:customFont="UbuntuRegular.ttf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view16" />

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:id="@+id/recycler_detailsp_titleharga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/total"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        app:customFont="UbuntuRegular.ttf"
        app:layout_constraintStart_toEndOf="@+id/recycler_detailsp_titleitemharga"
        app:layout_constraintTop_toBottomOf="@+id/view16" />

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:id="@+id/recycler_detailsp_titleitemsubtotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/subtotal"
        android:textColor="@color/colorContent"
        android:textSize="12sp"
        app:customFont="UbuntuRegular.ttf"
        app:layout_constraintEnd_toStartOf="@+id/recycler_detailsp_titlesubtotal"
        app:layout_constraintTop_toBottomOf="@+id/view16" />

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:id="@+id/recycler_detailsp_titlesubtotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:text="@string/total"
        android:textColor="@color/colorRed"
        android:textSize="12sp"
        android:textStyle="bold"
        app:customFont="UbuntuMedium.ttf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view16" />
</androidx.constraintlayout.widget.ConstraintLayout>