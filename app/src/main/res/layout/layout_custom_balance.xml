<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bggray"
            android:weightSum="2"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fragment_custombalance_imgtrl"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_name"
                    app:srcCompat="@drawable/logotrl" />

                <LinearLayout
                    android:id="@+id/fragment_custombalance_lineartrl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:id="@+id/layout_custom_balance_txtDeposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/_0"
                        android:textSize="16sp"
                        android:textColor="@color/colorContent"
                        android:textStyle="bold"
                        app:customFont="RobotoMedium.ttf"/>

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:id="@+id/layout_custom_balance_txtTitleDeposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="12sp"
                        android:text="@string/deposit"
                        app:customFont="RobotoMedium.ttf"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/fragment_custombalance_relativetrl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_marginStart="14dp">

                    <ProgressBar
                        android:id="@+id/fragment_custombalance_progresstrl"
                        style="?android:attr/progressBarStyle"
                        android:layout_centerInParent="true"
                        android:layout_width="26dp"
                        android:layout_height="26dp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fragment_custombalance_imgbprks"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/logo_bprks"
                    android:contentDescription="@string/app_name" />

                <LinearLayout
                    android:id="@+id/fragment_custombalance_linearbprks"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:id="@+id/layout_custom_balance_txtBprks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:text="@string/_0"
                        android:textColor="@color/colorContent"
                        android:textStyle="bold"
                        app:customFont="RobotoMedium.ttf"/>

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/bprks"
                        android:textSize="12sp"
                        app:customFont="RobotoMedium.ttf"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/fragment_custombalance_relativebprks"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_marginStart="14dp">

                    <ProgressBar
                        android:id="@+id/fragment_custombalance_progressbprks"
                        style="?android:attr/progressBarStyle"
                        android:layout_centerInParent="true"
                        android:layout_width="26dp"
                        android:layout_height="26dp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>