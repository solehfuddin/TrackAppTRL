<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Text Clicked -->
    <item android:state_pressed="true" android:color="@color/colorToolbar" />
    <item android:state_focused="true" android:color="@color/colorToolbar" />

    <!-- Text Hover -->
    <item android:color="@color/colorToolbar" android:state_pressed="true"/>
    <item android:color="@color/colorToolbar" android:state_pressed="false" android:state_selected="true"/>
    <item android:color="@android:color/white" android:state_selected="true"/>

    <!-- Text Color default -->
    <item android:color="#FFFFFF" />
</selector>