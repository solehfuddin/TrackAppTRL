        <!--</android.support.v7.widget.CardView>-->

        <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
            android:id="@+id/listitem_fragment_dashboard_txtProductid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Id"
            android:visibility="gone"
            android:textSize="10sp"
            app:customFont="MavenPro-Regular.ttf" />

        <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
            android:id="@+id/listitem_fragment_dashboard_txtProductname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Product Name"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            app:customFont="UbuntuMedium.ttf" />

        <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
            android:id="@+id/listitem_fragment_dashboard_txtProductavailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Stok Tersedia"
            android:textColor="@color/colorToolbar"
            android:textSize="11sp"
            android:ellipsize="end"
            android:maxLines="1"
            app:customFont="UbuntuMedium.ttf" />

        <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
            android:id="@+id/listitem_fragment_dashboard_txtRealprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:customFont="MavenPro-Regular.ttf"
            android:layout_marginTop="5dp"
            android:text="Real Price"
            android:textSize="12sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>