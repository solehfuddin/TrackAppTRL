<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="1dp"
    app:cardUseCompatPadding="true"
    android:background="@drawable/border_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_black">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="173dp"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/listitem_fragment_dashboard_imgProduct"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/bumperbanner" />

            <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                android:id="@+id/listitem_fragment_dashboard_txtDiscpercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_dark"
                android:padding="2dp"
                android:text="50% off"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:customFont="MavenPro-Regular.ttf"/>

            <com.varunest.sparkbutton.SparkButton
                android:id="@+id/listitem_fragment_dashboard_btnWish"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:sparkbutton_activeImage="@drawable/ic_favorite"
                app:sparkbutton_inActiveImage="@drawable/ic_favorite_border"
                app:sparkbutton_iconSize="16dp"
                app:sparkbutton_primaryColor="@color/colorEnd"
                app:sparkbutton_secondaryColor="@color/colorRed"
                app:sparkbutton_animationSpeed="1.5"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="95dp"
                android:layout_marginLeft="5dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/item_search_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="100dp"
                android:layout_marginRight="1dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary">

                    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
                        android:id="@+id/listitem_fragment_dashboard_txtBrand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Borelli"
                        android:textSize="12sp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        app:customFont="LatoBold.ttf" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

