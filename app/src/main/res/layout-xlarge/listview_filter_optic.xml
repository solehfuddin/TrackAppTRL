<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <com.raizlabs.universalfontcomponents.widget.UniversalFontTextView
        android:id="@+id/listview_filter_opticname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Name"
        android:textColor="#000"
        android:textSize="35sp"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="60dp"
        app:customFont="TitilliumSemiBold.ttf" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/listview_filter_opticstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="27dp"
        android:layout_below="@+id/listview_filter_opticname"
        app:bootstrapSize="xl"
        app:bootstrapBrand="success"
        app:bootstrapText="Active"/>

    <TextView
        android:id="@+id/listview_filter_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Data username"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>